<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    tools:context=".activities.MyAccountActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:elevation="2dp"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="My Account"
        app:titleTextColor="@color/black" />

    <ImageView
        android:id="@+id/prof_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/circle_icon_24" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/rubik_regular"
        android:text="Guest"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prof_img"

        />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="10sp"
        android:fontFamily="@font/rubik_regular"
        android:text="guest@gmail.com"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"

        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30sp"
        android:background="@drawable/acc_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email">

        <TextView
            android:id="@+id/nameid"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30sp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_bg"
            android:fontFamily="@font/rubik_regular"
            android:gravity="center"
            android:text="Party"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/positionid"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/button_bg"
            android:fontFamily="@font/rubik_regular"
            android:gravity="center"
            android:text="Position"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameid" />

        <TextView
            android:id="@+id/stateid"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/button_bg"
            android:fontFamily="@font/rubik_regular"
            android:gravity="center"
            android:text="State"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/positionid" />

        <TextView
            android:id="@+id/districid"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/button_bg"
            android:fontFamily="@font/rubik_regular"
            android:gravity="center"
            android:text="District"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stateid" />



        <Button
            android:id="@+id/button_bg3"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="20sp"
            android:background="@drawable/rect_bg_purple"
            android:fontFamily="@font/rubik_medium"
            android:text="SWITCH TO PRO"
            android:textSize="13dp"
            android:layout_marginStart="10sp"
            android:layout_marginBottom="30sp"
            android:textColor="@color/white_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_bg4"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/button_bg4"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="20sp"
            android:background="@drawable/edit_bgs"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:hint="ENTER PRO ID"
            android:textColor="@color/black_light"
            android:textSize="13dp"
            android:layout_marginHorizontal="10sp"
            android:layout_marginBottom="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/button_bg3" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>