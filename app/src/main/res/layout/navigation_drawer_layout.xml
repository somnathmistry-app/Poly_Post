<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purpleback"
    android:elevation="16dp">

    <TextView
        android:id="@+id/tag_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:text="PoliPost"
        android:textColor="#fff"
        android:textSize="25dp"
        android:textStyle="bold"
        android:fontFamily="@font/rubik_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/prof_img"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="10sp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@+id/tag_id"
        app:layout_constraintTop_toBottomOf="@+id/tag_id"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="PoliPost"
        android:textColor="#fff"
        android:textSize="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/rubik_regular"
        app:layout_constraintBottom_toTopOf="@+id/email"
        app:layout_constraintStart_toEndOf="@+id/prof_img"

        />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:text="PoliPost"
        android:textColor="#fff"
        android:textSize="14dp"
        android:layout_marginStart="3dp"
        android:fontFamily="@font/rubik_regular"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/prof_img"
        app:layout_constraintStart_toStartOf="@+id/name"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prof_img">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pcons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/pimg"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/pro" />

            <TextView
                android:id="@+id/pname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:fontFamily="@font/rubik_regular"
                android:text="SWITCH TO PRO"
                android:textColor="#fff"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/pimg"
                app:layout_constraintStart_toEndOf="@+id/pimg"
                app:layout_constraintTop_toTopOf="@+id/pimg" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/opcons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/opimg"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:scaleType="fitXY"
                android:layout_marginTop="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/resource_package" />

            <TextView
                android:id="@+id/opname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:fontFamily="@font/rubik_regular"
                android:text="OUR PACKAGES"
                android:textColor="#fff"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/opimg"
                app:layout_constraintStart_toEndOf="@+id/opimg"
                app:layout_constraintTop_toTopOf="@+id/opimg" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/simg"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:scaleType="fitXY"
                android:layout_marginTop="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/settings_icon" />

            <TextView
                android:id="@+id/sname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:fontFamily="@font/rubik_regular"
                android:text="SETTINGS"
                android:textColor="#fff"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/simg"
                app:layout_constraintStart_toEndOf="@+id/simg"
                app:layout_constraintTop_toTopOf="@+id/simg" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ncons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/nimg"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:scaleType="fitXY"
                android:layout_marginTop="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/notification_icon" />

            <TextView
                android:id="@+id/nname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:fontFamily="@font/rubik_regular"
                android:text="NOTIFICATIONS"
                android:textColor="#fff"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/nimg"
                app:layout_constraintTop_toTopOf="@+id/nimg" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ppcons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/ppimg"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:scaleType="fitXY"
                android:layout_marginTop="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/people_icon" />

            <TextView
                android:id="@+id/ppname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:fontFamily="@font/rubik_regular"
                android:text="MY ACCOUNT"
                android:textColor="#fff"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/ppimg"
                app:layout_constraintStart_toEndOf="@+id/ppimg"
                app:layout_constraintTop_toTopOf="@+id/ppimg" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="80dp"
            android:layout_marginStart="18dp"
            android:layout_marginHorizontal="18dp"
            android:background="@color/white_color"
            />


        <TextView
            android:id="@+id/text0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:fontFamily="@font/rubik_regular"
            android:text="How to use this App ?"
            android:textColor="#D8D3D3"
            android:textAllCaps="true"
            android:layout_marginTop="8dp"
            android:textSize="9dp"
            app:layout_constraintBottom_toBottomOf="@+id/pimg"
            app:layout_constraintStart_toEndOf="@+id/pimg"
            app:layout_constraintTop_toTopOf="@+id/pimg" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/vcons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/vimg"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/video_icon" />

            <TextView
                android:id="@+id/vname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:fontFamily="@font/rubik_regular"
                android:text="WATCH TUTORIALS"
                android:textColor="#fff"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/vimg"
                app:layout_constraintStart_toEndOf="@+id/vimg"
                app:layout_constraintTop_toTopOf="@+id/vimg" />

        </androidx.constraintlayout.widget.ConstraintLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="80dp"
            android:layout_marginStart="18dp"
            android:layout_marginHorizontal="18dp"
            android:background="@color/white_color"
            />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rcons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/rimg"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:scaleType="fitXY"
                android:layout_marginTop="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ratings" />

            <TextView
                android:id="@+id/rname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:fontFamily="@font/rubik_regular"
                android:text="RATING"
                android:textColor="#fff"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/rimg"
                app:layout_constraintStart_toEndOf="@+id/rimg"
                app:layout_constraintTop_toTopOf="@+id/rimg" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/shcons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/shimg"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:scaleType="fitXY"
                android:layout_marginTop="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/sharethis_xxl" />

            <TextView
                android:id="@+id/shname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:fontFamily="@font/rubik_regular"
                android:text="SHARE THIS APP"
                android:textColor="#fff"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/shimg"
                app:layout_constraintStart_toEndOf="@+id/shimg"
                app:layout_constraintTop_toTopOf="@+id/shimg" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/soicons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20sp"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/fb_id"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:layout_marginTop="10sp"
                app:layout_constraintEnd_toStartOf="@+id/insta_id"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/facebook" />

            <ImageView
                android:id="@+id/insta_id"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:layout_marginTop="10sp"
                app:layout_constraintEnd_toStartOf="@+id/tw_id"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fb_id"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/insta" />

            <ImageView
                android:id="@+id/tw_id"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:layout_marginTop="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toEndOf="@+id/insta_id"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/twitter" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>